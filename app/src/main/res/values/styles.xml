<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccentSecondary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Icon" parent="Widget.AppCompat.ImageButton">
        <item name="android:drawableTint" tools:targetApi="m">@color/colorSecondary</item>
        <item name="android:tint">@color/colorSecondary</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>
    <style name="Separator" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Separator.Space" parent="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_space_size</item>
    </style>

    <style name="MaterialEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:drawablePadding">@dimen/default_padding</item>
    </style>

    <style name="MaterialEditText.Selector" parent="MaterialEditText">
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="MaterialText">
        <item name="fontFamily">@font/lato</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <style name="MaterialText.Title" parent="MaterialText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="MaterialText.Title.Primary" parent="MaterialText.Title">
        <item name="android:textSize">@dimen/primary_title_size</item>
    </style>

    <style name="MaterialText.Title.Secondary" parent="MaterialText.Title">
        <item name="android:textSize">@dimen/secondary_title_size</item>
    </style>


    <style name="MaterialText.SubTitle" parent="MaterialText">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/subtitle_size</item>
    </style>

    <style name="MaterialText.Description" parent="MaterialText">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/description_size</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginLeft">@dimen/button_side_margin</item>
        <item name="android:layout_marginRight">@dimen/button_side_margin</item>
        <item name="android:layout_marginStart">@dimen/button_side_margin</item>
        <item name="android:layout_marginEnd">@dimen/button_side_margin</item>
        <item name="android:layout_marginTop">@dimen/button_top_bot_margin</item>
        <item name="android:layout_marginBottom">@dimen/button_top_bot_margin</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/default_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="MaterialButton.Primary" parent="MaterialButton">
        <item name="android:textColor">@color/colorLight</item>
        <item name="backgroundTint">@color/colorAccentSecondary</item>
    </style>

    <style name="MaterialButton.Secondary" parent="MaterialButton">
        <item name="android:textColor">@color/colorLight</item>
        <item name="backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="MaterialButton.Accent" parent="MaterialButton">
        <item name="android:textColor">@color/colorLight</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="MaterialButton.Light" parent="MaterialButton">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="backgroundTint">@color/colorLight</item>
    </style>


</resources>
